citation <- function(package = "yourPackage") {
  bibentry(
    bibtype = "Manual",
    title = "dpcR: Digital PCR Analysis",
    author = c(person("Michal", "Burdukiewicz"), person("Stefan", "Roediger"), person("Bart", "Jacobs"), person("Piotr", "Sobczyk")),
    journal = "",
    url = "https://CRAN.R-project.org/package=dpcR",
    year = 2013,
    volume = "",
    pages = ""
  )
}